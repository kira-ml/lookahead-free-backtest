# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Data files (treat as binary)
*.parquet binary
*.h5 binary
*.hdf5 binary
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary
*.csv binary

# Model files
*.joblib binary
*.model binary
*.pb binary

# Archives
*.zip binary
*.tar binary
*.gz binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary

# Jupyter Notebooks (normalize)
*.ipynb text eol=lf
